<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_margin_padding">

    <ImageView
        android:id="@+id/image_view_icon"
        android:layout_width="@dimen/alert_dialogue_icon_size"
        android:layout_height="@dimen/alert_dialogue_icon_size"
        android:contentDescription="@string/ico_location_pointer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primaryColor"
        tools:src="@drawable/ic_baseline_my_location_50" />

    <TextView
        android:id="@+id/text_view_alert_msg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin_padding"
        android:gravity="center"
        android:textSize="@dimen/text_size_great"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_icon"
        tools:text="@string/access_device_location_msg" />

</androidx.constraintlayout.widget.ConstraintLayout>