<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashScreenTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTextStyle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/splash_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="editTextMaterial" parent="@android:style/Widget.EditText">
        <item name="android:textColorHint">@color/input_hint_color</item>
        <item name="android:textColor">@color/input_text_color</item>
        <item name="android:textSize">@dimen/inputs_textSize</item>
    </style>

</resources>